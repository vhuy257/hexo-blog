<div class='row'>
  <ul class="list-post">
    <% page.posts.each(function(post){ %>
    <li class="item <%= post.slug %>">
      <h3>
        <a href="<%- url_for(post.path) %>">
          <%= post.title %>
        </a>
      </h3>
      <div class='text-muted'>
        <%= date(post.date, config.date_format) %>
      </div>
      <% if(post.excerpt) { %>
      <p>
        <%- post.excerpt %>
      </p>
      <% } %>
    </li>
    <% }) %>
  </ul>
</div>
