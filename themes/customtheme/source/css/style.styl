@import "_variables"
@import "_util/mixin"
@import "_partial/article"

input, button
  margin: 0
  padding: 0
  &::-moz-focus-inner
    border: 0
    padding: 0

html, body, #container
  height: 100%

html, *
  box-sizing: border-box

body
  background: color-background
  font-size: font-size
  font-family: font-nunito
  -webkit-text-size-adjust: 100%
  line-height: 1.8
  margin: 0
  padding: 0

scrollbarcustom()

img
  max-width: 100%
  display: block
  height: auto
  margin: 0 auto

pre .string
  color: green

h1
  margin-top: 0

code
  background: #f8f8f8
  border: 1px solid #ccc
  display: block
  padding: 10px
  border-radius: 5px
  
.social-icon
  list-style-type: none
  padding-left: 0
  margin-bottom: 0
  li
    display: inline-block;
    margin: 0 10px
    img
      max-width: 25px

.img-wrapper
  text-align: center
  background: #fff
  padding-bottom: 10px

.list-post
  padding-left: 0
  list-style-type: none
  max-width: 768px
  margin: 10px auto
  border-top: 3px solid orange

  .item
    margin-bottom: 20px
    box-shadow: 0px 4px 4px 0px #ccc
    border-radius: 5px
    background: #fff
    padding: 5px 10px
    h3
      margin-bottom: 5px
    h3 > a
      color: #333
      text-decoration: none
    .text-muted
      color: #888
      font-size: 12px
