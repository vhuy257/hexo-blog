@import "_variables"
@import "_util/mixin"
@import "_partial/article"

input, button
  margin: 0
  padding: 0
  &::-moz-focus-inner
    border: 0
    padding: 0

html, body, #container
  height: 100%

body
  background: color-background
  font-size: font-size
  font-family: font-nunito
  -webkit-text-size-adjust: 100%
  line-height: 1.8

scrollbarcustom()

.img-wrapper
  text-align: center

.list-post
  padding-left: 0
  list-style-type: none
  max-width: 600px
  margin: 10px auto
  .item
    margin-bottom: 20px
    box-shadow: 0px 4px 4px 0px #ccc
    border-radius: 5px
    background: #fff
    padding: 5px 10px
    h3
      margin-bottom: 5px
    h3 > a
      color: #333
      text-decoration: none
    .text-muted
      color: #888
      font-size: 12px
