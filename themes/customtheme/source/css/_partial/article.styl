.post-detail
  background: #fff
  padding: 10px 15px
  border-radius: 5px
  box-shadow: -1px -5px 5px 0px #ccc
  border-top: 3px solid color-orange
  margin-bottom: 10px
  .highlight
    background: #000
    color: #c5c1c1
    border-radius: 3px
    margin: 10px 0
    padding: 0 10px
    .gutter .line
      color: #888
      font-size: 14px
  h1.title
    color: color-orange
    margin-bottom: 0
  .text-muted
    color: #888
    font-size: 12px

@media mq-normal
  .post-detail
    max-width: 768px
    margin: 10px auto
